<ui:MCASRSCategoryView
    xmlns="https://spacestation14.io"
    xmlns:ui="clr-namespace:Content.Client._MC.ASRS.Ui"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client">
    <BoxContainer Orientation="Vertical" VerticalExpand="True" Margin="4">
        <PanelContainer VerticalExpand="True">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat
                    BorderColor="#3A3A3A"
                    BorderThickness="1"
                    BackgroundColor="#1A1A1A" />
            </PanelContainer.PanelOverride>
            <BoxContainer Orientation="Vertical" Margin="8">

                <BoxContainer Orientation="Vertical" Access="Public" Margin="8">
                    <BoxContainer Orientation="Horizontal">
                        <RichTextLabel Text="Personal Points: " Access="Public" />
                        <RichTextLabel Text="0" Name="PersonalPointsLabel" Access="Public" />
                    </BoxContainer>

                    <BoxContainer Orientation="Horizontal">
                        <RichTextLabel Text="Personal: " Access="Public" />
                        <RichTextLabel Text="0" Name="PointsLabel" Access="Public" />
                    </BoxContainer>
                </BoxContainer>

                <cc:HSeparator Color="#4972A1" Margin="8 0" />

                <BoxContainer Orientation="Vertical" Access="Public" Margin="8">
                    <Button Text="Pending Order" Name="PendingOrderButton" StyleClasses="ButtonSquare" HorizontalExpand="True" Access="Public" />
                    <Button Text="Previous Purchases" Name="PreviousPurchasesButton" StyleClasses="ButtonSquare" HorizontalExpand="True" Access="Public" />
                    <Button Text="Export History" Name="ExportHistoryButton" StyleClasses="ButtonSquare" HorizontalExpand="True" Access="Public" />
                </BoxContainer>

                <cc:HSeparator Color="#4972A1" Margin="8 0" />

                <BoxContainer Orientation="Vertical" Access="Public" Margin="8">
                    <Button Text="Requests" Name="RequestsButton" StyleClasses="ButtonSquare" HorizontalExpand="True" Access="Public" />
                    <Button Text="Approved Requests" Name="ApprovedRequestsButton" StyleClasses="ButtonSquare" HorizontalExpand="True" Access="Public" />
                    <Button Text="Denied Requests" Name="DeniedRequestsButton" StyleClasses="ButtonSquare" HorizontalExpand="True" Access="Public" />
                </BoxContainer>

                <cc:HSeparator Color="#4972A1" Margin="8 0" />

                <BoxContainer Name="CategoriesContainer" Orientation="Vertical" Access="Public" Margin="8" />
            </BoxContainer>
        </PanelContainer>
    </BoxContainer>
</ui:MCASRSCategoryView>
